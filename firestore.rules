rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper Functions ──────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'ADMIN';
    }

    function isTrainerRole() {
      return isAuthenticated() && getUserData().role == 'TRAINER';
    }

    function isTrainerOf(traineeId) {
      let trainee = get(/databases/$(database)/documents/users/$(traineeId)).data;
      return isAuthenticated() && request.auth.uid == trainee.trainerId;
    }

    // ── Users Collection ──────────────────────────────────────────────
    match /users/{userId} {
      allow read: if isOwner(userId) || isTrainerOf(userId) || isAdmin();
      // FIX: Allow Trainers to list users so they can find trainees to message
      allow list: if isAdmin() || isTrainerRole();
      allow write: if isOwner(userId) || (isAdmin() && request.resource.data.trainerStatus in ['PENDING', 'APPROVED', 'REJECTED']);
    }

    // ── Daily Arcs & Workouts ─────────────────────────────────────────
    match /dailyArcs/{arcId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow get: if isAuthenticated() && (arcId.split('_')[0] == request.auth.uid || isTrainerOf(arcId.split('_')[0]));
      // FIX: Trainers can list arcs for their trainees
      allow list: if isAuthenticated() && (resource.data.userId == request.auth.uid || isTrainerOf(resource.data.userId));
      allow update: if isAuthenticated() && arcId.split('_')[0] == request.auth.uid;
    }

    match /workouts/{workoutId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow get: if isAuthenticated() && (workoutId.split('_')[0] == request.auth.uid || isTrainerOf(workoutId.split('_')[0]));
      allow list: if isAuthenticated() && (resource.data.userId == request.auth.uid || isTrainerOf(resource.data.userId));
      allow update: if isAuthenticated() && workoutId.split('_')[0] == request.auth.uid;
    }

    // ── Meal Logs ─────────────────────────────────────────────────────
    match /mealLogs/{logId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow get: if isAuthenticated() && (resource.data.userId == request.auth.uid || isTrainerOf(resource.data.userId));
      allow list: if isAuthenticated() && (resource.data.userId == request.auth.uid || isTrainerOf(resource.data.userId));
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // ── Conversations (Private Messaging) ─────────────────────────────
    match /conversations/{conversationId} {
      // FIX: Check 'request.resource' for creation because 'resource' doesn't exist yet
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      allow read, update: if isAuthenticated() && request.auth.uid in resource.data.participants;

      // ── Messages Sub-Collection ──────────────────────────────────────
      match /messages/{messageId} {
        // Use a helper-like check to verify participant status on the parent conversation
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        allow create: if isAuthenticated() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;
          
        allow update: if isAuthenticated() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'updatedAt']);
      }
    }

    // ── Community Feed (Posts & Comments) ─────────────────────────────
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'updatedAt'])
      );

      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}